# =============================================================================
# MCP-RMM Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control!

# =============================================================================
# Auth0 Authentication Configuration
# =============================================================================
# Your Auth0 domain login URL
AUTH0_LOGIN_URL=https://your-auth0-domain.auth0.com/login

# Login credentials for Sharp-Start SSO
USERNAME_1=your-username@company.com
PASSWORD_1=your-secure-password-here

# =============================================================================
# Sharp B2B Cloud API Configuration
# =============================================================================
# Base URL for Sharp B2B Cloud API
API_BASE_URL=https://alt-rmm-api.sharpb2bcloud.com

# Tenant API endpoint path
TENANT_LIST_ENDPOINT=api/v1/tenants

# Azure API Management subscription key
OCP_APIM_SUBSCRIPTION_KEY=your-subscription-key-here

# =============================================================================
# Browser Automation Settings
# =============================================================================
# Run browser in headless mode (true for production, false for debugging)
HEADLESS=false

# Delay between browser actions in milliseconds
SLOW_MO=1500

# Browser viewport dimensions
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# =============================================================================
# Timeout Settings (in milliseconds)
# =============================================================================
# Time to wait for dashboard to load after login
DASHBOARD_TIMEOUT=40000

# Time to wait for page elements to appear
ELEMENT_TIMEOUT=40000

# Time to wait for API calls to be triggered
API_TRIGGER_TIMEOUT=40000

# =============================================================================
# Storage Configuration
# =============================================================================
# File path for storing JWT tokens
TOKEN_FILE=auth_token.json

# =============================================================================
# Optional: Additional Configuration
# =============================================================================
# Log level for debugging (DEBUG, INFO, WARNING, ERROR)
# LOGLEVEL=INFO

# Custom user agent string (optional)
# USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/138.0.0.0 Safari/537.36

# =============================================================================
# Development Settings
# =============================================================================
# Uncomment for development/debugging
# DEBUG=true
# PYTHONPATH=.
